
@model Gbc_Travel_Group63.Models.SignInViewModel

<h2>Sign In</h2>

<form asp-action="Signin" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" />
    </div>
    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" />
    </div>
    <div>
        <label>
            <input type="checkbox" asp-for="RememberMe" /> Remember Me
        </label>
    </div>
    <button type="submit">Sign In</button>

    <a asp-action="ForgotPassword" asp-controller="Authorization">Forgot Password?</a>
</form>